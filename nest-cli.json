{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "plugins": [
      "@nestjs/swagger"
    ],
    "deleteOutDir": true,
    "assets": [
      {
        "watchAssets": true,
        "include": "config/*.yaml",
        "outDir": "./dist/src"
      }
    ]
  }
}
